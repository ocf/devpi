apiVersion: v1
kind: Service
metadata:
  name: service
spec:
  selector:
    app: devpi
  ports:
    - port: 80
      targetPort: 3141
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: deployment
  labels:
    app: devpi
spec:
  replicas: 1
  selector:
    matchLabels:
      app: devpi
  template:
    metadata:
      labels:
        app: devpi
    spec:
      containers:
        - name: devpi
          image: "docker.ocf.berkeley.edu/devpi:<%= version %>"
          envFrom:
            - secretRef:
                name: devpi-secret
          resources:
            limits:
              memory: 3072Mi
              cpu: 750m
          ports:
            - containerPort: 3141
          livenessProbe:
            httpGet:
              path: /
              port: 3141
            initialDelaySeconds: 120
            timeoutSeconds: 5
            failureThreshold: 6
          readinessProbe:
            httpGet:
              path: /
              port: 3141
            initialDelaySeconds: 60
            timeoutSeconds: 3
            periodSeconds: 5
---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: virtual-host-ingress
spec:
  rules:
    - host: devpi.ocf.berkeley.edu
      http:
        paths:
          - backend:
              serviceName: service
              servicePort: 80

