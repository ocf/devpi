apiVersion: v1
kind: Service
metadata:
  name: devpi-service
spec:
  selector:
    app: devpi
  ports:
    - port: 3141
      targetPort: 80
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: devpi-deployment
  labels:
    app: devpi
spec:
  replicas: 1
  selector:
    matchLabels:
      app: devpi
  template:
    metadata:
      labels:
        app: devpi
    spec:
      containers:
        - name: devpi
          image: "docker.ocf.berkeley.edu/devpi:<%= version %>"
          resources:
            limits:
              memory: 512Mi
              cpu: 175m
          ports:
            - containerPort: 3141
          volumeMounts:
            - mountPath: /mnt
              name: data
            # there is no volume for ssl because we don't use ssl within the container

      volumes:
        - name: data
          persistentVolumeClaim:
            claimName: devpi-data-pvc
---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: devpi-ingress
spec:
  rules:
    - host: devpi.ocf.berkeley.edu
      http:
        paths:
          - backend:
              serviceName: devpi-service
              servicePort: 80
    - host: devpi.dev-kubernetes.ocf.berkeley.edu
      http:
        paths:
          - backend:
              serviceName: devpi-service
              servicePort: 80
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: devpi-data-pvc
spec:
  accessModes:
    - ReadWriteMany
  resources:
    requests:
      storage: 25Gi
  volumeName: "devpi-data-pv"

